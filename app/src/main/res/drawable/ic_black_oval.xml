<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="oval" >
            <gradient
                android:endColor="@color/soft_green"
                android:startColor="@color/water_blue"
                android:angle="0"
                android:type="radial"
                android:gradientRadius="50%p"

                />
            <corners
                android:radius="7.5dp"
                />
            <size
                android:width="30dp"
                android:height="30dp"
                />
            stroke
            android:width="1dp"
            android:color="#001d765d"
            />
        </shape>
    </item>


</layer-list>