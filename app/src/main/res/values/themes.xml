<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PlatCourse" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorPrimary">@color/red_pink</item> // Activated State
        <item name="colorOnSurface">@color/radio_color</item> // Normal State

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="font">@font/medium</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextInputLayoutHintText">
        <item name="hintTextColor">@color/pinkish_grey</item>
        <item name="android:textSize">13.5sp</item>
        <item name="android:fontFamily">@font/medium</item>
    </style>

    <style name="TextInputLayoutPrefixText">
        <item name="hintTextColor">#b0aeae</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/regular</item>
    </style>
    <style name="EditTextHintText">
        <item name="hintTextColor">@color/pinkish_grey</item>
        <item name="android:textSize">13.5sp</item>
        <item name="android:fontFamily">@font/regular</item>
    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="android:textSize">13.5sp</item>
        <item name="android:fontFamily">@font/regular</item>
    </style>

    <style name="Widget.BottomNavigationViewActive" parent="Widget.Design.BottomNavigationView">
        <item name="android:textSize">13.5sp</item>
        <item name="android:fontFamily">@font/regular</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textSize">10.5sp</item>
        <item name="android:textColor">@color/water_blue</item>
    </style>

    <style name="tab_text_profile" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="MyBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/MYBottomSheetStyle</item>
    </style>
    <style name="MYBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>