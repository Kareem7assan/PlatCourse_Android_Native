<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PlatCourse" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorPrimary">@color/red_pink</item> // Activated State
        <item name="colorOnSurface">@color/radio_color</item> // Normal State

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:fontFamily">@font/medium</item>
        <item name="font">@font/medium</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorPrimary</item>


        <!-- Customize your theme here. -->
    </style>
    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/colorPrimary</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>

    <style name="TextInputLayoutHintText">
        <item name="hintTextColor">@color/pinkish_grey</item>
        <item name="android:textSize">13.5sp</item>
        <item name="android:fontFamily">@font/medium</item>
    </style>

    <style name="TextInputLayoutPrefixText">
        <item name="hintTextColor">#b0aeae</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/regular</item>
    </style>

    <style name="TextInputLayoutHelperText">
        <item name="hintTextColor">#b0aeae</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/light</item>
    </style>
    <style name="EditTextHintText">
        <item name="hintTextColor">@color/pinkish_grey</item>
        <item name="android:textSize">13.5sp</item>
        <item name="android:fontFamily">@font/regular</item>
    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="android:textSize">13.5sp</item>
        <item name="android:fontFamily">@font/regular</item>
    </style>

    <style name="Widget.BottomNavigationViewActive" parent="Widget.Design.BottomNavigationView">
        <item name="android:textSize">13.5sp</item>
        <item name="android:fontFamily">@font/regular</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textSize">10.5sp</item>
        <item name="android:textColor">@color/water_blue</item>
    </style>

    <style name="tab_text_profile" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="MyBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/MYBottomSheetStyle</item>
    </style>
    <style name="MYBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppFullScreenTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:fitsSystemWindows">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:navigationBarColor">@null</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>


        <!--<item name="android:windowNoTitle">true</item>
