<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="@dimen/margin_small"
            app:cardCornerRadius="6dp"
            android:layout_margin="@dimen/margin_large"
            app:cardBackgroundColor="@color/colorOnMyBackground"
            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="top|start"
            >
            <ImageView
                android:id="@+id/logo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginBottom="@dimen/margin_normal"
                android:src="@drawable/logo"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toTopOf="@id/tvTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reset_password"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            app:layout_constraintTop_toBottomOf="@id/ivBack"
            app:layout_constraintStart_toStartOf="@id/startGuide"
            android:layout_marginTop="27dp"
            android:textColor="@color/colorOnMyBackgroundReverse"
            android:fontFamily="@font/medium"
            />

        <TextView
            android:id="@+id/tvSubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/light"
            android:textStyle="normal"
            android:textSize="15.5sp"
            android:layout_gravity="center_horizontal"
            app:layout_constrainedWidth="true"
            android:textColor="@color/colorOnMyBackgroundReverse"
            android:lineSpacingExtra="6.8sp"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="@id/startGuide"
            android:text="@string/add_new_password"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintEnd_toEndOf="@id/endGuide"
            android:layout_marginTop="13.5dp"
            />

        TextView
            android:id="@+id/tvPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            app:layout_constraintTop_toBottomOf="@id/tvSubTitle"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="12sp"

            android:textColor="@color/colorOnMyBackgroundReverse"
            android:layout_marginStart="22dp"
            android:layout_marginTop="17.5dp"
            android:lineSpacingExtra="25sp"
            android:text="@string/password"/>



            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="21dp"
                android:layout_marginEnd="21dp"
                android:layout_marginTop="@dimen/margin_large"
                android:minHeight="60dp"
                android:padding="@dimen/margin_small"
                app:boxBackgroundColor="@android:color/transparent"
                android:background="@android:color/transparent"
                android:backgroundTint="@null"
                app:boxBackgroundMode="filled"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:hintTextAppearance="@style/TextLabel"
                android:hint="@string/password"
                app:passwordToggleEnabled="true"
                android:textAlignment="viewEnd"
                app:suffixTextAppearance="@style/TextInputLayoutPrefixText"
                android:textColorHint="@color/brown_grey"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/et_background"
                    android:fontFamily="@font/regular"
                    android:textSize="15sp"
                    android:textColor="@color/colorOnMyBackgroundReverse"
                    android:paddingStart="@dimen/margin_normal"
                    android:paddingEnd="@dimen/margin_normal"
                    android:gravity="start"
                    android:inputType="textPassword|textNoSuggestions"
                    android:textAlignment="viewStart"
                    />
            </com.google.android.material.textfield.TextInputLayout>




        <TextView
            android:id="@+id/tvErrorPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:fontFamily="@font/regular"
            android:text="@string/check_field_pass"
            android:textColor="@color/red_pink"
            android:visibility="invisible"
            android:layout_marginBottom="@dimen/margin_normal"
            app:layout_constraintTop_toBottomOf="@id/etPassLay"
            app:layout_constraintStart_toStartOf="@id/etPassLay"
            />
        TextView
            android:id="@+id/tvConfirmPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            app:layout_constraintTop_toBottomOf="@id/tvErrorPass"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="12sp"
            android:textColor="@color/colorOnMyBackgroundReverse"
            android:layout_marginStart="22dp"
            android:layout_marginTop="@dimen/margin_normal"
            android:lineSpacingExtra="25sp"
            android:text="@string/reenter_pass"/>



            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="21dp"
                android:layout_marginEnd="21dp"

                android:minHeight="60dp"
                android:padding="@dimen/margin_small"
                app:boxBackgroundColor="@android:color/transparent"
                android:background="@android:color/transparent"
                android:backgroundTint="@null"
                app:boxBackgroundMode="filled"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:hintTextAppearance="@style/TextLabel"
                android:hint="@string/password"
                app:passwordToggleEnabled="true"
                android:textAlignment="viewEnd"
                app:suffixTextAppearance="@style/TextInputLayoutPrefixText"
                android:textColorHint="@color/brown_grey"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etConfirmPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/et_background"
                    android:fontFamily="@font/regular"
                    android:textSize="15sp"
                    android:textColor="@color/colorOnMyBackgroundReverse"
                    android:paddingStart="@dimen/margin_normal"
                    android:paddingEnd="@dimen/margin_normal"
                    android:gravity="start"
                    android:inputType="textPassword|textNoSuggestions"
                    android:textAlignment="viewStart"
                    />
            </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:id="@+id/tvErrorConfirmPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:fontFamily="@font/regular"
            android:text="@string/check_confirm_pass"
            android:textColor="@color/red_pink"
            android:visibility="invisible"

            android:layout_marginBottom="@dimen/margin_normal"
            app:layout_constraintTop_toBottomOf="@id/etConfirmPassLay"
            app:layout_constraintStart_toStartOf="@id/etConfirmPassLay"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/completeBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:layout_marginEnd="19dp"
            android:layout_marginBottom="9dp"
            android:background="@drawable/button_background"
            android:backgroundTint="@null"
            android:fontFamily="@font/medium"
            android:minHeight="44dp"
            android:text="@string/complete"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/margin_normal"
            app:backgroundTint="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@id/tvErrorConfirmPass" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/startGuide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="18.5dp"
            />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/endGuide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="18.5dp"
            />
        </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>