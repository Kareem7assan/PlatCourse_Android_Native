<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_right"
            android:tint="@color/soft_green"
            android:layout_marginTop="71dp"
            android:rotation="180"
            android:layout_marginStart="-8dp"
            app:layout_constraintStart_toStartOf="@id/startGuide"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reset_password"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/ivBack"
            app:layout_constraintStart_toStartOf="@id/startGuide"
            android:layout_marginTop="27dp"
            android:textColor="@color/dark"
            android:fontFamily="@font/medium"
            />

        <TextView
            android:id="@+id/tvSubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/light"
            android:textStyle="normal"
            android:textSize="15.5sp"
            app:layout_constrainedWidth="true"
            android:textColor="@color/greyish_brown"
            android:lineSpacingExtra="6.8sp"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="@id/startGuide"
            android:text="@string/add_new_password"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintEnd_toEndOf="@id/endGuide"
            android:layout_marginTop="13.5dp"
            />

        <TextView
            android:id="@+id/tvPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            app:layout_constraintTop_toBottomOf="@id/tvSubTitle"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="12sp"
            android:layout_marginBottom="@dimen/margin_normal"
            android:textColor="@color/dark_indigo"
            android:layout_marginStart="22dp"
            android:layout_marginTop="17.5dp"
            android:lineSpacingExtra="25sp"
            android:text="@string/password"/>



        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/etPassLay"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_marginStart="19dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="19dp"
            android:background="@null"
            android:gravity="start"
            android:minHeight="41dp"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:expandedHintEnabled="false"
            app:hintAnimationEnabled="false"
            app:hintTextAppearance="@style/TextInputLayoutHintText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvPass"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_white"
                android:fontFamily="@font/medium"
                android:inputType="textPassword"
                android:maxLength="12"
                android:maxLines="1"
                android:minHeight="41dp"

                android:paddingStart="13dp"
                android:paddingTop="@dimen/margin_small"
                android:paddingEnd="@dimen/margin_large"
                android:paddingBottom="@dimen/margin_small"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textDirection="rtl"
                android:textSize="13.5sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvPass"
                />
        </com.google.android.material.textfield.TextInputLayout>




        <TextView
            android:id="@+id/tvErrorPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_normal"
            android:fontFamily="@font/regular"
            android:text="@string/check_field_pass"
            android:textColor="@color/red_pink"
            android:visibility="invisible"
            android:layout_marginBottom="@dimen/margin_normal"
            app:layout_constraintTop_toBottomOf="@id/etPassLay"
            app:layout_constraintStart_toStartOf="@id/etPassLay"
            />
        <TextView
            android:id="@+id/tvConfirmPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            app:layout_constraintTop_toBottomOf="@id/tvErrorPass"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="12sp"
            android:layout_marginBottom="@dimen/margin_normal"
            android:textColor="@color/dark_indigo"
            android:layout_marginStart="22dp"
            android:layout_marginTop="17.5dp"
            android:lineSpacingExtra="25sp"
            android:text="@string/reenter_pass"/>



        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/etConfirmPassLay"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_marginStart="19dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="19dp"
            android:background="@null"
            android:gravity="start"
            android:minHeight="41dp"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:expandedHintEnabled="false"
            app:hintAnimationEnabled="false"
            app:hintTextAppearance="@style/TextInputLayoutHintText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvConfirmPass"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etConfirmPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_white"
                android:fontFamily="@font/medium"
                android:inputType="textPassword"
                android:maxLength="12"
                android:maxLines="1"
                android:minHeight="41dp"
                android:paddingStart="13dp"
                android:paddingTop="@dimen/margin_small"
                android:paddingEnd="@dimen/margin_large"
                android:paddingBottom="@dimen/margin_small"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textDirection="rtl"
                android:textSize="13.5sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvPass"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:id="@+id/tvErrorConfirmPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_normal"
            android:fontFamily="@font/regular"
            android:text="@string/check_confirm_pass"
            android:textColor="@color/red_pink"
            android:visibility="invisible"
            android:layout_marginBottom="@dimen/margin_normal"
            app:layout_constraintTop_toBottomOf="@id/etConfirmPassLay"
            app:layout_constraintStart_toStartOf="@id/etConfirmPassLay"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/completeBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:layout_marginEnd="19dp"
            android:layout_marginBottom="9dp"
            android:background="@drawable/grad_background_btn"
            android:backgroundTint="@null"
            android:fontFamily="@font/medium"
            android:minHeight="44dp"
            android:text="@string/complete"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/margin_normal"
            app:backgroundTint="@null"
            app:layout_constraintTop_toBottomOf="@id/tvErrorConfirmPass" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/startGuide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="18.5dp"
            />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/endGuide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="18.5dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>