<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="@dimen/margin_small"
            app:cardCornerRadius="6dp"
            android:layout_margin="@dimen/margin_large"
            app:cardBackgroundColor="@color/colorOnMyBackground"
            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="top|center_horizontal"
            >
            <ImageView
                android:id="@+id/logo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginBottom="@dimen/margin_normal"
                android:src="@drawable/logo"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toTopOf="@id/tvTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/verify"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/ivBack"
            app:layout_constraintStart_toStartOf="@id/startGuide"
            android:layout_marginTop="27dp"
            android:textColor="@color/colorOnMyBackgroundReverse"
            android:fontFamily="@font/medium"
            />

        <TextView
            android:id="@+id/tvSubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/light"
            android:textStyle="normal"
            android:textSize="15.5sp"
            android:gravity="center_horizontal"
            app:layout_constrainedWidth="true"
            android:textColor="@color/colorOnMyBackgroundReverse"
            android:lineSpacingExtra="6.8sp"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="@id/startGuide"
            android:text="@string/email_verify_hint"
            app:layout_constraintEnd_toEndOf="@id/endGuide"
            android:layout_marginTop="13.5dp"
            />



            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="21dp"
                android:layout_marginEnd="21dp"
                android:layout_marginTop="24dp"
                android:minHeight="60dp"
                android:padding="@dimen/margin_small"
                app:boxBackgroundColor="@android:color/transparent"
                android:background="@android:color/transparent"
                android:backgroundTint="@null"
                app:boxBackgroundMode="filled"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:hintTextAppearance="@style/TextLabel"
                android:hint="@string/verify_code"
                android:textAlignment="viewEnd"
                app:suffixTextAppearance="@style/TextInputLayoutPrefixText"
                android:textColorHint="@color/brown_grey"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/otpView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/et_background"
                    android:fontFamily="@font/regular"
                    android:gravity="start"

                    android:inputType="number|textNoSuggestions"
                    android:paddingStart="@dimen/margin_normal"
                    android:paddingEnd="@dimen/margin_normal"
                    android:textAlignment="viewStart"
                    android:textColor="@color/colorOnMyBackgroundReverse"
                    android:textSize="15sp" />
            </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:id="@+id/tvErrorMail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:fontFamily="@font/regular"
            android:text="@string/check_email"
            android:textColor="@color/colorOnMyBackgroundReverse"
            android:layout_marginBottom="13dp"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="@id/otpView"
            app:layout_constraintTop_toBottomOf="@id/otpView"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/completeBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:layout_marginEnd="19dp"
            android:layout_marginBottom="9dp"
            android:background="@drawable/button_background"
            android:backgroundTint="@null"
            android:fontFamily="@font/medium"
            android:minHeight="44dp"
            android:text="@string/complete"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/margin_normal"
            app:backgroundTint="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@id/tvErrorMail" />

        <LinearLayout
            android:id="@+id/forgetLay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/completeBtn"
            android:layout_marginTop="22dp"
            app:layout_constraintStart_toStartOf="parent"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"

            >
            <TextView
                android:id="@+id/tvForgetHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/not_receive_code"
                android:fontFamily="@font/regular"
                android:textStyle="bold"
                android:textSize="12.5sp"
                android:padding="@dimen/margin_small"
                android:textColor="@color/light_grey"
                />
            <TextView
                android:id="@+id/tvResetPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/tvForgetHint"
                app:layout_constraintTop_toBottomOf="@+id/tvErrorPass"
                android:text="@string/resend"
                android:textSize="12.5sp"
                android:fontFamily="@font/regular"
                android:paddingEnd="@dimen/margin_small"
                android:paddingTop="@dimen/margin_small"
                android:paddingBottom="@dimen/margin_small"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                />
            <TextView
                android:id="@+id/tvResetPassTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/tvForgetHint"
                app:layout_constraintTop_toBottomOf="@+id/tvErrorPass"
                android:text="@string/resend_timer"
                android:textSize="12.5sp"
                android:fontFamily="@font/regular"
                android:visibility="gone"
                android:paddingEnd="@dimen/margin_small"
                android:paddingTop="@dimen/margin_small"
                android:paddingBottom="@dimen/margin_small"
                android:textStyle="bold"
                android:textColor="@color/putty_text"
                />
        </LinearLayout>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/startGuide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="18.5dp"
            />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/endGuide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="18.5dp"
            />
        </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>