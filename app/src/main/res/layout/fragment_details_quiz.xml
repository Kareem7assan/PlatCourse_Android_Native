<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:background="#F6F7FD">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvQuesNums"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="48dp"
            android:text="@string/questions_num_red"
            android:textColor="@color/black"
            android:textSize="16sp"

            app:layout_constraintBottom_toTopOf="@id/tvAnswers"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/ivTimer" />

        <TextView
            android:id="@+id/tvAnswers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="48dp"
            android:text="@string/result_num_red"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/ivTimer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvQuesNums"

            />

        <ImageView
            android:id="@+id/ivTimer"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginStart="@dimen/margin_large"
            android:layout_marginTop="32dp"
            android:background="@drawable/circle_shape"
            android:backgroundTint="@color/green_correct"
            app:layout_constraintStart_toEndOf="@+id/barrier9"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/ivTimer"
            app:layout_constraintEnd_toEndOf="@id/ivTimer"
            app:layout_constraintStart_toStartOf="@id/ivTimer"
            app:layout_constraintTop_toTopOf="@id/ivTimer" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvQuestions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_large"
            app:layout_constraintTop_toBottomOf="@id/barrier11"
            tools:listitem="@layout/item_question"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/finishBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:layout_marginEnd="19dp"
            android:layout_marginBottom="32dp"
            app:layout_constraintTop_toBottomOf="@+id/rvQuestions"
            app:layout_constraintVertical_bias="1"
            android:background="@drawable/button_background"
            app:layout_constraintBottom_toBottomOf="parent"

            android:fontFamily="@font/medium"
            android:minHeight="44dp"
            android:text="@string/finish_exam"
            android:textColor="@color/white"
            android:backgroundTint="@null"
            app:backgroundTint="@color/colorPrimary"
            />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="left"
            app:constraint_referenced_ids="tvQuesNums" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="top"
            app:constraint_referenced_ids="ivTimer" />
        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="ivTimer,tvAnswers,tvQuesNums" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>