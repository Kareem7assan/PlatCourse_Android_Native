<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootView"
    android:fillViewport="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_normal"
            />






        <LinearLayout
            android:id="@+id/inputsLay"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/margin_large"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardElevation="@dimen/margin_small"
                app:cardCornerRadius="6dp"
                android:layout_margin="@dimen/margin_large"
                app:cardBackgroundColor="@color/colorOnMyBackground"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    >

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/ivAvatar"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginStart="18.5dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginTop="32dp"
                            android:src="@drawable/response"
                            />
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/transformBtn"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@null"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:visibility="invisible"
                            app:backgroundTint="@color/colorPrimary"
                            android:textSize="11.8sp"
                            app:layout_constraintTop_toBottomOf="@id/ivAvatar"
                            android:textColor="@color/white"
                            android:text="@string/edit"
                            android:layout_marginStart="@dimen/margin_large"
                            android:layout_marginEnd="@dimen/margin_large"
                            android:layout_marginTop="@dimen/margin_normal"
                            android:layout_marginBottom="12.5dp"
                            android:background="@drawable/grad_background_btn"
                            />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <TextView
                        android:id="@+id/tvAddressTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:layout_marginStart="@dimen/margin_normal"
                        android:layout_marginEnd="@dimen/margin_normal"
                        android:gravity="start"
                        android:layout_marginTop="@dimen/margin_normal"
                        android:fontFamily="@font/regular"
                        android:text="@string/name"
                        android:textAlignment="viewStart"
                        />
                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:padding="@dimen/margin_normal"
                        android:layout_marginStart="@dimen/margin_normal"
                        android:layout_marginEnd="@dimen/margin_normal"
                        android:gravity="start"

                        tools:text="Egypt, Dakahlia, Mansoura, Mansoura, Toreel, Street 18, Next to bim market."
                        android:textAlignment="viewStart"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:layout_marginStart="@dimen/margin_normal"
                        android:layout_marginEnd="@dimen/margin_normal"
                        android:gravity="start"
                        android:layout_marginTop="@dimen/margin_normal"
                        android:fontFamily="@font/regular"
                        android:text="@string/country"
                        android:textAlignment="viewStart"
                        />
                    <TextView
                        android:id="@+id/tvCountry"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:padding="@dimen/margin_normal"
                        android:layout_marginStart="@dimen/margin_normal"
                        android:layout_marginEnd="@dimen/margin_normal"
                        android:gravity="start"
                        tools:text=" Next to bim market."
                        android:textAlignment="viewStart"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:layout_marginStart="@dimen/margin_normal"
                        android:layout_marginEnd="@dimen/margin_normal"
                        android:gravity="start"
                        android:layout_marginTop="@dimen/margin_normal"
                        android:fontFamily="@font/regular"
                        android:text="@string/city"
                        android:textAlignment="viewStart"
                        />
                    <TextView
                        android:id="@+id/tvCity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:padding="@dimen/margin_normal"
                        android:layout_marginStart="@dimen/margin_normal"
                        android:layout_marginEnd="@dimen/margin_normal"
                        android:gravity="start"
                        tools:text=" Next to bim market."
                        android:textAlignment="viewStart"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:layout_marginStart="@dimen/margin_normal"
                        android:layout_marginEnd="@dimen/margin_normal"
                        android:gravity="start"
                        android:layout_marginTop="@dimen/margin_normal"
                        android:fontFamily="@font/regular"
                        android:text="@string/email"
                        android:textAlignment="viewStart"
                        />
                    <TextView
                        android:id="@+id/tvEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:padding="@dimen/margin_normal"
                        android:layout_marginStart="@dimen/margin_normal"
                        android:layout_marginEnd="@dimen/margin_normal"
                        android:gravity="start"
                        tools:text=" Next to bim market."
                        android:textAlignment="viewStart"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:layout_marginStart="@dimen/margin_normal"
                        android:layout_marginEnd="@dimen/margin_normal"
                        android:gravity="start"
                        android:layout_marginTop="@dimen/margin_normal"
                        android:fontFamily="@font/regular"
                        android:text="@string/phone"
                        android:textAlignment="viewStart"
                        />
                    <TextView
                        android:id="@+id/tvPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:padding="@dimen/margin_normal"
                        android:layout_marginStart="@dimen/margin_normal"
                        android:layout_marginEnd="@dimen/margin_normal"
                        android:gravity="start"
                        tools:text=" Next to bim market."
                        android:textAlignment="viewStart"
                        />

                    com.google.android.material.button.MaterialButton
                    android:id="@+id/saveBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="19dp"
                    android:layout_marginEnd="19dp"
                    android:layout_marginBottom="9dp"
                    android:background="@drawable/button_background"
                    android:fontFamily="@font/medium"
                    android:minHeight="44dp"
                    android:text="@string/sav"
                    android:textColor="@color/white"
                    android:backgroundTint="@null"
                    app:backgroundTint="@color/colorPrimary"
                    />


                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>