<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nestedRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white"
        style="@style/AppTheme"
        android:theme="@style/AppTheme">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:elevation="0dp"
            app:expandedTitleMarginBottom="0dp"
            app:expandedTitleMarginTop="0dp"
            app:contentScrim="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_collapseMode="parallax"
                android:orientation="vertical"
                >
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/ivBgProfile"
                    android:layout_width="match_parent"
                    android:layout_height="166dp"
                    android:background="#000000"
                    />
                    <ImageView
                        android:id="@+id/ivBack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/arrow_right"
                        app:layout_constraintStart_toStartOf="parent"
                        android:tint="@color/white"
                        android:elevation="@dimen/margin_normal"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="@dimen/margin_normal"
                        android:rotation="180"
                        android:padding="@dimen/margin_normal"
                    />
                </FrameLayout>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivAvatar"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginStart="18.5dp"
                    android:layout_marginTop="-35dp"
                    />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="17.5dp"
                    android:layout_marginEnd="21dp"
                    >
                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/medium"
                        android:textStyle="normal"
                        android:textSize="17sp"
                        android:gravity="start"
                        android:textAlignment="viewStart"
                        android:textColor="@color/dark"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:lineSpacingExtra="1.5sp"
                        app:layout_constraintEnd_toStartOf="@id/actionBtn"
                        tools:text="فهد عبدالله"/>
                    <TextView
                        android:id="@+id/tvUserName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/regular"
                        android:textStyle="normal"
                        android:textSize="14sp"
                        android:gravity="start"
                        android:textAlignment="viewStart"
                        app:layout_constraintEnd_toStartOf="@id/actionBtn"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvName"
                        android:textColor="@color/brown_grey"
                        android:lineSpacingExtra="16.5sp"
                        tools:text="\ufeff@saadhamd"/>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/actionBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@null"
                        app:backgroundTint="@null"
                        android:minHeight="37dp"
                        android:minWidth="113dp"
                        android:text="@string/edit_profile"
                        android:textColor="@color/water_blue"
                        app:layout_constraintTop_toTopOf="@id/tvName"
                        app:layout_constraintBottom_toBottomOf="@id/tvUserName"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:background="@drawable/stroke_water_bg_18_rad"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                    android:id="@+id/tvBio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/light"
                    android:textStyle="normal"
                    android:textSize="14sp"
                    android:layout_marginStart="17.5dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/dark"
                    android:lineSpacingExtra="4.5sp"
                    tools:text="مرحياً بك في ملفي الشخصي اشكرك على دخولك واطلب منك
المتابعة اخي الحبيب"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:background="@color/very_light_pink"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:minHeight="44dp"
                    android:gravity="center"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        >
                        <TextView
                            android:id="@+id/tvFollowing"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintEnd_toStartOf="@id/followers"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintHorizontal_bias="1"
                            android:fontFamily="@font/bold"
                            android:textColor="@color/dark"
                            />

                        <TextView
                            android:id="@+id/following"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/margin_small"
                            android:fontFamily="@font/light"
                            android:lineSpacingExtra="4.5sp"
                            android:textColor="@color/dark"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toEndOf="@id/view"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:text="@string/following" />
                    </LinearLayout>
                    <View
                        android:id="@+id/view"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/very_light_pink"
                        android:layout_gravity="center"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        >
                        <TextView
                            android:id="@+id/tvFollowers"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintEnd_toStartOf="@id/followers"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintHorizontal_bias="1"
                            android:fontFamily="@font/bold"
                            android:textColor="@color/dark"
                            />
                        <TextView
                            android:id="@+id/followers"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/light"
                            android:layout_marginStart="@dimen/margin_small"
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:textColor="@color/dark"
                            app:layout_constraintEnd_toEndOf="@id/view"
                            android:lineSpacingExtra="4.5sp"
                            android:text="@string/followers"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/very_light_pink"
                    />
            </LinearLayout>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <include
        android:id="@+id/content"
        layout="@layout/fragment_content_profile"

        />


</androidx.coordinatorlayout.widget.CoordinatorLayout>