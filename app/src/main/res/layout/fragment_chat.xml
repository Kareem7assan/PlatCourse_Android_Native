<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        >
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        >
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar_chat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                app:layout_constraintTop_toTopOf="parent"
                />


        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent" android:layout_height="fill_parent"
        android:layout_below="@id/topBar" android:layout_above="@id/bottomBar"
        android:id="@+id/centerView"
        android:paddingBottom="5sp"
        >
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
            <LinearLayout
                android:id="@+id/addressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="28.5dp"
                android:layout_marginBottom="34dp"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_gravity="center"
                    android:gravity="center"

                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/light"
                        android:textStyle="normal"
                        android:textSize="13sp"
                        android:layout_gravity="center"
                        android:textColor="#199dc3"
                        android:lineSpacingExtra="5.5sp"
                        android:text="@string/chat_order"
                        />
                    <TextView
                        android:id="@+id/tvId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bold"
                        android:textStyle="normal"
                        android:textSize="13sp"
                        android:layout_marginStart="@dimen/margin_small"
                        android:layout_gravity="center"
                        android:textColor="#199dc3"
                        android:lineSpacingExtra="5.5sp"
                        tools:text="#1324"
                        />
                </LinearLayout>
                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/water_blue"

                    />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvMessages"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/item_chat"
                tools:itemCount="12"

                />


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
    </LinearLayout>
<LinearLayout
    android:id="@+id/bottomBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_alignParentBottom="true"

    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        >
        <ImageView
            android:id="@+id/ivCam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/camera"
            android:tint="@color/greyish_steel"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="18.5dp"
            app:layout_constraintTop_toTopOf="@id/etMsg"
            app:layout_constraintBottom_toBottomOf="@id/etMsg"

            />
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivCam"
            app:layout_constrainedWidth="true"
            android:layout_marginStart="7dp"
            app:layout_constraintEnd_toStartOf="@id/ivSendBtn"
            android:hint="@string/write_message"
            android:fontFamily="@font/medium"
            android:inputType="textMultiLine"
            android:textSize="12.2sp"
            android:gravity="start"
            android:textAlignment="viewStart"
            android:layout_marginBottom="20dp"
            android:padding="@dimen/margin_normal"
            android:background="@null"
            android:textColorHint="#939393"
            />
        <ImageView
            android:id="@+id/ivSendBtn"
            android:layout_width="42.5dp"
            android:layout_height="42.5dp"
            android:src="@drawable/send_btn"
            android:layout_marginEnd="17dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/etMsg"
            app:layout_constraintTop_toTopOf="@id/etMsg"
            />

        <View
            android:id="@+id/viewBottom"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#30000000"
            android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toTopOf="@id/ivSendBtn"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>
</RelativeLayout>