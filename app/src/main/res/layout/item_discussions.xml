<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_normal"
    app:cardBackgroundColor="@color/colorOnMyBackground"
    app:cardCornerRadius="@dimen/margin_normal"
    xmlns:tools="http://schemas.android.com/tools">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tvCreator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_normal"
        android:fontFamily="@font/medium"
        android:text="name last"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_normal"
        android:fontFamily="@font/regular"
        android:text="name last"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_normal"
        android:fontFamily="@font/regular"
        android:text="name last"
        android:textColor="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/tvCreator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="20sp"
         />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvComments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        android:layout_marginTop="@dimen/margin_normal"
        tools:itemCount="3"
        tools:listitem="@layout/item_comment"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inpComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginEnd="21dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/rvComments"
        android:minHeight="60dp"
        android:padding="@dimen/margin_small"
        app:boxBackgroundColor="@android:color/transparent"
        android:background="@android:color/transparent"
        android:backgroundTint="@null"
        app:boxBackgroundMode="filled"
        app:boxStrokeColor="@color/colorPrimary"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        app:hintTextAppearance="@style/TextLabel"
        android:hint="@string/new_comment"
        android:textAlignment="viewEnd"
        app:suffixTextAppearance="@style/TextInputLayoutPrefixText"
        android:textColorHint="@color/brown_grey"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rect_shape_stroke"
            android:fontFamily="@font/regular"
            android:gravity="start"
            android:inputType="text|textNoSuggestions"
            android:paddingStart="@dimen/margin_normal"
            android:paddingEnd="@dimen/margin_normal"
            android:textAlignment="viewStart"
            android:textSize="15sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/addCommentBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@null"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:textSize="14.5sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/inpComment"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/medium"
        app:backgroundTint="@color/colorPrimary"
        android:text="@string/add_comment"
        android:background="@drawable/button_background"
        />
    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_normal"
        app:layout_constraintTop_toBottomOf="@id/addCommentBtn"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>