<com.google.android.material.card.MaterialCardView
    android:id="@+id/card_lay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:strokeColor="@color/very_light_pink"
    app:strokeWidth="0.5dp"
    android:layout_marginStart="1dp"
    android:layout_marginEnd="1dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="7.5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvPayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/margin_large"
            android:drawablePadding="@dimen/margin_normal"
            android:fontFamily="@font/meduim"
            android:textColor="@color/dark"
            android:textSize="16sp"

            app:layout_constraintTop_toTopOf="@id/ivIcon"
            app:layout_constraintEnd_toStartOf="@id/ivIcon"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/tvPaymentHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="@dimen/margin_small"
            android:drawablePadding="@dimen/margin_normal"
            android:fontFamily="@font/meduim"
            android:text="انت تمتلك ١٤٠ ر.س"
            android:textColor="@color/dark"
            android:textSize="16sp"

            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ivIcon"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@id/tvPayment"
            app:layout_constraintTop_toBottomOf="@id/tvPayment" />

        <ImageView
            android:id="@+id/ivIcon"
            android:layout_width="61dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal"
            android:fontFamily="@font/bold"

            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/margin_large"
            app:layout_constraintEnd_toEndOf="parent"

            />
        <Space
            android:id="@+id/iv"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            app:layout_constraintTop_toBottomOf="@id/ivIcon"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
