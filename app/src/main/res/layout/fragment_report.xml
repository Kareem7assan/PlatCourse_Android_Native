<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fillViewport="true"

    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <include
                android:id="@+id/reportBar"
                layout="@layout/toolbar_close"
                app:layout_constraintTop_toTopOf="parent"
                />
            <TextView
                android:id="@+id/tvSelect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/medium"
                android:textStyle="normal"
                android:textSize="14.5sp"
                app:layout_constraintTop_toBottomOf="@id/reportBar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="30dp"
                android:textColor="@color/dark"
                android:lineSpacingExtra="5.5sp"
                android:text="@string/select_reason"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvReasons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24.5dp"
                tools:listitem="@layout/item_region_single"
                app:layout_constraintTop_toBottomOf="@id/tvSelect"
                />

            <TextView
                android:id="@+id/tvReasonTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18.5dp"
                android:fontFamily="@font/regular"
                android:lineSpacingExtra="0.3sp"
                android:text="@string/report_reason"
                android:textColor="@color/dark"
                android:textSize="12.3sp"
                android:layout_marginStart="25.5dp"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rvReasons" />


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    android:background="@drawable/border_white"
                    android:drawableTint="#939393"
                    android:inputType="textNoSuggestions|textMultiLine"
                    android:layout_marginStart="18.5dp"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="@font/medium"
                    android:gravity="start|center_vertical"
                    android:maxLength="1000"
                    android:paddingStart="@dimen/margin_normal"
                    android:paddingEnd="@dimen/margin_normal"
                    android:layout_marginTop="11dp"
                    android:minLines="3"
                    android:hint="@string/add_mail_details"
                    android:textAlignment="viewStart"
                    android:textColor="@color/dark"
                    android:textColorHint="#b0aeae"
                    android:textSize="12.2sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvReasonTitle"
                    app:layout_constraintBottom_toTopOf="@id/sep"
                    android:layout_marginBottom="@dimen/margin_large"
                    />

            <View
                android:id="@+id/sep"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#e4e4e4"
                app:layout_constraintBottom_toTopOf="@id/sendBtn"
                android:layout_marginBottom="@dimen/margin_large"
                />
            <TextView
                android:id="@+id/backBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="140dp"
                app:layout_constraintBottom_toBottomOf="@id/sendBtn"
                android:textColor="@color/dark"
                android:gravity="center"
                android:paddingTop="@dimen/margin_normal"
                android:paddingBottom="@dimen/margin_normal"
                app:layout_constraintTop_toTopOf="@id/sendBtn"
                app:layout_constraintStart_toStartOf="parent"
                android:visibility="gone"
                android:text="@string/back"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/sendBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                android:backgroundTint="@null"
                app:backgroundTint="@null"
                android:textColor="@color/very_grey_color_text"
                android:enabled="false"
                android:text="@string/send"
                app:layout_constraintStart_toEndOf="@id/backBtn"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="@dimen/margin_large"
                android:background="@drawable/disable_background_btn"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
