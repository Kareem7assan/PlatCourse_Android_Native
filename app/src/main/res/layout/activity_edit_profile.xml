<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootView"
    android:fillViewport="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


            <ImageView
                android:id="@+id/ivCover"
                android:layout_width="match_parent"
                android:layout_height="166dp"
                app:layout_constraintTop_toTopOf="parent"
                />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#80000000"
            android:minHeight="166dp"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <ImageView
            android:id="@+id/ivEditBg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/pen_edit"
            android:tint="#60c098"
            android:padding="@dimen/margin_normal"
            app:layout_constraintBottom_toBottomOf="@id/ivCover"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="@dimen/margin_large"
            android:background="@drawable/custom_oval_white"
            />
            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_right"
                app:layout_constraintStart_toStartOf="parent"
                android:tint="@color/white"
                android:elevation="@dimen/margin_normal"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/margin_normal"
                android:rotation="180"
                android:padding="@dimen/margin_normal"
                />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivAvatar"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginStart="18.5dp"
            app:layout_constraintTop_toBottomOf="@id/ivCover"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="-35dp"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginStart="18.5dp"
            app:layout_constraintTop_toBottomOf="@id/ivCover"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="-35dp"
            android:background="@drawable/custom_oval_trans_black"
            />
        <ImageView
            android:id="@+id/ivEditAvatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/pen_edit"
            android:tint="#60c098"
            android:padding="@dimen/margin_normal"
            app:layout_constraintBottom_toBottomOf="@id/ivAvatar"
            app:layout_constraintEnd_toEndOf="@id/ivAvatar"
            app:layout_constraintStart_toStartOf="@id/ivAvatar"
            app:layout_constraintTop_toTopOf="@id/ivAvatar"
            android:layout_margin="@dimen/margin_large"
            android:background="@drawable/custom_oval_white"
            />





        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            app:layout_constraintTop_toBottomOf="@id/ivAvatar"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="12sp"
            android:layout_marginTop="22.5dp"
            android:textColor="@color/dark"
            android:layout_marginStart="26dp"
            android:lineSpacingExtra="25sp"
            android:text="@string/user_name"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@id/tvFname"
            app:layout_constraintTop_toTopOf="@id/tvFname"
            android:layout_marginStart="3dp"
            app:layout_constraintBottom_toBottomOf="@id/tvFname"
            />
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="41dp"
            android:layout_marginTop="9dp"
            android:gravity="center_vertical"
            android:background="@drawable/border_white"
            android:textAlignment="gravity"
            android:hint="@string/enter_first_name"
            android:paddingStart="13.5dp"
            android:layout_marginStart="19dp"
            android:layout_marginEnd="19dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvUserName"
            android:inputType="text"
            android:paddingEnd="@dimen/margin_large"
            android:maxLines="1"
            android:maxLength="24"
            android:textSize="13.5sp"
            android:fontFamily="@font/medium"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/tvErrorUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/etUsername"
            app:layout_constraintStart_toStartOf="@id/etUsername"
            android:textColor="@color/red_pink"
            android:text="@string/check_first_empty"
            android:fontFamily="@font/regular"
            android:visibility="gone"
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_small"
            />
    <TextView
            android:id="@+id/tvFname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            app:layout_constraintTop_toBottomOf="@id/tvErrorUserName"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="12sp"
            android:layout_marginTop="13.5dp"
            android:textColor="@color/dark"
            android:layout_marginStart="26dp"
            android:lineSpacingExtra="25sp"
            android:text="@string/name"/>
        <ImageView
            android:id="@+id/ivMarkName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@id/tvFname"
            app:layout_constraintTop_toTopOf="@id/tvFname"
            android:layout_marginStart="3dp"
            app:layout_constraintBottom_toBottomOf="@id/tvFname"
            />
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etFname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="41dp"
            android:layout_marginTop="9dp"
            android:gravity="center_vertical"
            android:background="@drawable/border_white"
            android:textAlignment="gravity"
            android:hint="@string/enter_name"
            android:paddingStart="13.5dp"
            android:layout_marginStart="19dp"
            android:layout_marginEnd="19dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvFname"
            android:inputType="text"
            android:paddingEnd="@dimen/margin_large"
            android:maxLines="1"
            android:maxLength="24"
            android:textSize="13.5sp"
            android:fontFamily="@font/medium"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/tvErrorFName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/etFname"
            app:layout_constraintStart_toStartOf="@id/etFname"
            android:textColor="@color/red_pink"
            android:text="@string/check_first_empty"
            android:fontFamily="@font/regular"
            android:visibility="gone"
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_small"
            />

        <TextView
            android:id="@+id/tvBio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            app:layout_constraintTop_toBottomOf="@id/tvErrorFName"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="12sp"
            android:layout_marginTop="13.5dp"
            android:textColor="@color/dark"
            android:layout_marginStart="26dp"
            android:lineSpacingExtra="25sp"
            android:text="@string/bio"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@id/tvFname"
            app:layout_constraintTop_toTopOf="@id/tvFname"
            android:layout_marginStart="3dp"
            app:layout_constraintBottom_toBottomOf="@id/tvFname"
            />
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etBio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="41dp"
            android:layout_marginTop="9dp"
            android:gravity="center_vertical"
            android:background="@drawable/border_white"
            android:textAlignment="gravity"
            android:hint="@string/enter_your_bio"
            android:paddingStart="13.5dp"
            android:layout_marginStart="19dp"
            android:layout_marginEnd="19dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvBio"
            android:inputType="text|textMultiLine"
            android:minLines="2"
            android:paddingEnd="@dimen/margin_large"
            android:maxLines="1"
            android:maxLength="160"
            android:textSize="13.5sp"
            android:fontFamily="@font/medium"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/tvErrorBio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/etBio"
            app:layout_constraintStart_toStartOf="@id/etFname"
            android:textColor="@color/red_pink"
            android:text="@string/check_first_empty"
            android:fontFamily="@font/regular"
            android:visibility="gone"
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_small"
            />

        <TextView
            android:id="@+id/tvPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            app:layout_constraintTop_toBottomOf="@id/tvErrorBio"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="12sp"
            android:textColor="@color/dark"
            android:layout_marginStart="22dp"
            android:layout_marginTop="13.5dp"
            android:lineSpacingExtra="25sp"
            android:text="@string/phone"/>

        <ImageView
            android:id="@+id/ivMarkPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@id/tvPhone"
            app:layout_constraintTop_toTopOf="@id/tvPhone"
            android:layout_marginStart="3dp"
            app:layout_constraintBottom_toBottomOf="@id/tvPhone"
            />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="41dp"
            android:gravity="center_vertical|start"
            android:background="@drawable/border_white"
            android:textAlignment="gravity"
            android:layout_marginTop="9dp"
            android:paddingEnd="73dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPhone"
            android:layout_marginStart="19dp"
            android:layout_marginEnd="19dp"
            android:inputType="phone"
            android:maxLines="1"
            android:maxLength="9"
            android:textSize="13.5sp"
            android:fontFamily="@font/medium"
            android:textColor="@color/black"

            />
        <TextView
            android:id="@+id/tvErrorPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/etPhone"
            app:layout_constraintStart_toStartOf="@id/etPhone"
            android:textColor="@color/red_pink"
            android:fontFamily="@font/regular"
            android:text="@string/check_field_phone_error"
            android:visibility="gone"
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_small"
            />
        <com.hbb20.CountryCodePicker
            android:id="@+id/country_code_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:ccp_autoFormatNumber="true"
            app:ccp_clickable="false"
            app:ccp_defaultNameCode="SA"
            app:ccp_showArrow="false"
            app:ccp_showFlag="true"
            app:ccp_showNameCode="false"
            app:ccp_contentColor="@color/spruce"
            app:ccp_showPhoneCode="false"
            app:ccp_textGravity="CENTER"
            app:ccp_textSize="10sp"
            app:layout_constraintEnd_toEndOf="@+id/etPhone"
            app:layout_constraintTop_toTopOf="@id/etPhone"
            app:layout_constraintBottom_toBottomOf="@id/etPhone"
            />

        <TextView
            android:id="@+id/countryCodeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            android:text="966"
            android:textColor="@color/pinkish_grey"
            android:textSize="15sp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@id/country_code_picker"
            app:layout_constraintTop_toTopOf="@id/country_code_picker"
            app:layout_constraintEnd_toStartOf="@+id/country_code_picker" />

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            app:layout_constraintTop_toBottomOf="@id/tvErrorPhone"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="12sp"
            android:layout_marginTop="13.5dp"
            android:textColor="@color/dark_indigo"
            android:layout_marginStart="22dp"
            android:lineSpacingExtra="25sp"
            android:text="@string/email"/>
        <ImageView
            android:id="@+id/ivMarkEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@id/tvEmail"
            app:layout_constraintTop_toTopOf="@id/tvEmail"
            android:layout_marginStart="3dp"
            app:layout_constraintBottom_toBottomOf="@id/tvEmail"
            />
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="41dp"
            android:layout_marginTop="9dp"
            android:gravity="center_vertical"
            android:background="@drawable/border_white"
            android:textAlignment="gravity"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvEmail"
            android:inputType="textEmailAddress"
            android:paddingEnd="@dimen/margin_large"
            android:layout_marginStart="19dp"
            android:layout_marginEnd="19dp"
            android:hint="@string/enter_email"
            android:paddingStart="13.5dp"
            android:maxLines="1"
            android:textSize="13.5sp"
            android:fontFamily="@font/medium"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/tvErrorMail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/etEmail"
            app:layout_constraintStart_toStartOf="@id/etEmail"
            android:textColor="@color/red_pink"
            android:text="@string/check_email"
            android:fontFamily="@font/regular"
            android:visibility="gone"
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_small"
            />





        TextView
        android:id="@+id/tvPassTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textSize="14.5sp"
        android:textColor="@color/dark_indigo"
        android:lineSpacingExtra="8.5sp"
        android:text="@string/pass_hint_title"


        app:layout_constraintTop_toBottomOf="@+id/tvErrorPhone"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/medium"

        android:layout_marginTop="22dp"
        />



        <com.google.android.material.button.MaterialButton
            android:id="@+id/editBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/grad_background_btn"
            android:backgroundTint="@null"
            app:backgroundTint="@null"
            android:layout_marginTop="23dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/margin_large"
            android:text="@string/save_info"
            android:textStyle="bold"
            android:minHeight="46.5dp"
            android:layout_marginStart="19dp"
            android:layout_marginEnd="19dp"
            android:textSize="12.5sp"
            android:fontFamily="@font/medium"
            app:layout_constraintTop_toBottomOf="@id/tvErrorMail"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>