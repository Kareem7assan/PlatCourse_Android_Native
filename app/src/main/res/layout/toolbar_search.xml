<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="92dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/grad_background_toolbar">

    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_right"
        app:layout_constraintVertical_bias="0"
        android:layout_marginTop="44dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/margin_large"
        android:rotation="180"
        android:tint="@color/white"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cardSearch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ivBack"
        android:minHeight="44dp"
        android:layout_marginEnd="@dimen/margin_large"
        app:layout_constraintStart_toStartOf="@id/ivBack"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/solid_button_white"
        android:layout_marginTop="22.5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="13dp"
        >
        <ImageView
            android:id="@+id/ivSearchEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/search"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="12.5dp"
            android:visibility="invisible"
            android:tint="@color/soft_green"
            />
        <ImageView
            android:id="@+id/ivSearchStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/search"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="12.5dp"
            android:layout_marginStart="16.5dp"
            android:tint="@color/soft_green"
            />

        <ImageView
            android:id="@+id/ivClear"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/close_square"
            app:layout_constraintStart_toEndOf="@id/ivSearchStart"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="12.5dp"
            android:visibility="gone"
            android:layout_marginStart="16.5dp"
            />
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etSearch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constrainedWidth="true"
            android:hint="@string/search_hint"
            android:textColorHint="#1f262e"
            android:gravity="center"
            android:paddingStart="@dimen/margin_normal"
            android:paddingEnd="@dimen/margin_normal"
            android:backgroundTint="@null"
            android:inputType="text"
            android:imeOptions="actionSearch"
            android:background="@null"
            android:textColor="#1f262e"
            android:fontFamily="@font/regular"
            android:textSize="13.2sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivClear"
            app:layout_constraintEnd_toStartOf="@id/ivSearchEnd"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>