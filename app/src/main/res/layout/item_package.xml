<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/packageLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/stroke_bg_white_7"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="19dp"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:minHeight="45dp"
        android:padding="15.5dp"
        android:gravity="center_vertical"
        >
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/medium"
            android:textStyle="normal"
            android:textSize="13sp"
            android:textColor="@color/dark"
            android:lineSpacingExtra="6sp"
            android:text="@string/package_for_ad"/>
        <TextView
            android:id="@+id/tvDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            android:textStyle="normal"
            android:textSize="13sp"
            android:layout_marginTop="@dimen/margin_normal"
            android:textColor="#b0aeae"
            android:lineSpacingExtra="6sp"
            android:text="@string/free_tweet"/>
        <TextView
            android:id="@+id/tvCost"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            android:textStyle="normal"
            android:textSize="13sp"
            android:layout_marginTop="@dimen/margin_normal"
            android:textColor="@color/greyish_steel"
            android:lineSpacingExtra="6sp"
            android:text="@string/free_tweet"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>