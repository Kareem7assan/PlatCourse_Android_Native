<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/packagesRecLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/wallet_circle"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="18.5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/medium"
                android:textStyle="normal"
                android:textSize="14.5sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10.5dp"
                android:textColor="@color/dark"
                android:lineSpacingExtra="5.5sp"
                android:gravity="center_horizontal"
                android:text="@string/pay_featured_ad"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular"
                android:textStyle="normal"
                android:textSize="12.5sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10.5dp"
                android:textColor="@color/water_blue"
                android:lineSpacingExtra="5.5sp"
                android:gravity="center_horizontal"
                android:text="@string/top_class"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/stroke_bg_selected"
                android:layout_margin="10.5dp"
                >
                <LinearLayout
                    android:id="@+id/prem_lay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/tvSince"
                    app:layout_constraintTop_toTopOf="@id/tvName"
                    app:layout_constraintBottom_toBottomOf="@id/tvName"
                    android:background="@drawable/grad_background_rad_3"
                    android:layout_marginTop="10.5dp"
                    android:layout_marginStart="10.5dp"
                    android:padding="2dp"
                    >
                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:tint="@color/white"
                        android:layout_marginEnd="2dp"
                        android:layout_marginStart="@dimen/margin_small"
                        android:src="@drawable/star"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/regular"
                        android:textStyle="normal"
                        android:textSize="7sp"
                        android:layout_gravity="center_vertical"
                        android:textColor="#ffffff"
                        android:layout_marginEnd="@dimen/margin_small"
                        android:lineSpacingExtra="5.5sp"
                        android:text="@string/special_ad"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tvDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/medium"
                    android:textStyle="normal"
                    android:textSize="12.5sp"
                    android:layout_margin="13dp"
                    android:textColor="@color/dark"
                    android:lineSpacingExtra="6sp"
                    tools:text="ايفون برو ماكس حديث وجديد في حالة مميزة
#ايفون ــ برو ــ ماكس"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvImgs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/medium"
                    android:layout_marginStart="13.5dp"
                    android:layout_marginBottom="13dp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_img_tweet_norm"
                    />
            </LinearLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <LinearLayout
                    android:id="@+id/packageLay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/stroke_bg_white_7"
                    android:layout_marginStart="19dp"
                    android:layout_marginEnd="19dp"
                    android:layout_marginTop="19dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:orientation="vertical"
                    android:minHeight="45dp"
                    android:padding="15.5dp"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:id="@+id/tvTitlePackage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/medium"
                        android:textStyle="normal"
                        android:textSize="13sp"
                        android:textColor="@color/dark"
                        android:lineSpacingExtra="6sp"
                        tools:text="@string/package_for_ad"/>
                    <TextView
                        android:id="@+id/tvDescPackage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/regular"
                        android:textStyle="normal"
                        android:textSize="13sp"
                        android:layout_marginTop="@dimen/margin_normal"
                        android:textColor="#b0aeae"
                        android:lineSpacingExtra="6sp"
                        tools:text="@string/free_tweet"/>
                    <TextView
                        android:id="@+id/tvCostPackage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/regular"
                        android:textStyle="normal"
                        android:textSize="13sp"
                        android:layout_marginTop="@dimen/margin_normal"
                        android:textColor="@color/greyish_steel"
                        android:lineSpacingExtra="6sp"
                        tools:text="@string/free_tweet"/>
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/medium"
            android:textStyle="normal"
            android:textSize="14.5sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_large"
            android:textColor="@color/dark"
            android:lineSpacingExtra="5.5sp"
            android:text="@string/select_payment_methods"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvMethods"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18.5dp"
            android:layout_marginEnd="18.5dp"
            android:layout_marginBottom="13dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_payment"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="bottom"
            android:layout_marginBottom="@dimen/margin_large"
            >
            <TextView
                android:id="@+id/backBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="140dp"
                app:layout_constraintBottom_toBottomOf="@id/saveBtn"
                android:textColor="@color/dark"
                android:gravity="center"
                android:paddingTop="@dimen/margin_normal"
                android:paddingBottom="@dimen/margin_normal"
                android:layout_gravity="bottom"

                app:layout_constraintTop_toTopOf="@id/saveBtn"
                app:layout_constraintStart_toStartOf="parent"
                android:text="@string/back"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/saveBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_gravity="bottom"
                android:backgroundTint="@null"
                app:backgroundTint="@null"
                android:textColor="@color/very_grey_color_text"
                android:enabled="false"
                android:text="@string/follow"
                app:layout_constraintStart_toEndOf="@id/backBtn"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="@dimen/margin_large"
                android:layout_marginEnd="@dimen/margin_large"

                android:background="@drawable/disable_background_btn"
                />
        </LinearLayout>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>