<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/tvBankName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/regular"
        android:textStyle="normal"
        android:textSize="12.3sp"
        android:textColor="@color/dark"
        android:layout_marginTop="16dp"
        android:lineSpacingExtra="0.3sp"
        android:layout_marginStart="7dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="بنك الراجحي"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10.5dp"

        app:layout_constraintTop_toBottomOf="@id/tvBankName"
        android:background="@drawable/bg_bank_account"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="رقم الحساب"
            android:textSize="12.2sp"
            android:layout_weight="1"
            android:fontFamily="@font/medium"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/tvAccNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12.2sp"
            android:gravity="end"
            android:text="12345"
            android:textAlignment="viewEnd"
            android:layout_weight="1"
            android:fontFamily="@font/medium"
            android:textColor="@color/black"
            />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/very_light_pink"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/iban_num"
            android:textSize="12.2sp"
            android:layout_weight="1"
            android:fontFamily="@font/medium"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/tvIbanNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12.2sp"
            android:gravity="end"
            android:text="123456"
            android:textAlignment="viewEnd"
            android:layout_weight="1"
            android:fontFamily="@font/medium"
            android:textColor="@color/black"
            />
        </LinearLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/transformBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@null"
        app:backgroundTint="@null"
        android:textSize="11.8sp"
        android:textColor="@color/white"
        android:text="@string/transform"
        android:layout_marginStart="@dimen/margin_large"
        android:layout_marginEnd="@dimen/margin_large"
        android:layout_marginTop="@dimen/margin_normal"
        android:layout_marginBottom="12.5dp"
        android:background="@drawable/grad_background_btn"
        />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>