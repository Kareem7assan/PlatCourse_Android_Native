<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:minHeight="92dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/grad_background_toolbar">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@id/ivBack"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        tools:text="كريم"
        android:fontFamily="@font/regular"
        android:textStyle="normal"
        android:layout_marginStart="18dp"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/ivBack"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        tools:text="\ufeff@Ahmed–21"
        android:fontFamily="@font/regular"
        android:textStyle="normal"
        android:layout_marginStart="18dp"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/ivBack"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    </LinearLayout>
    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_right"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/margin_large"
        android:tint="@color/white"
        android:rotation="180"
        />
    <ImageView
        android:id="@+id/viewMsg"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:background="@drawable/radio_uncheck_dot"
        android:backgroundTint="@color/water_blue"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:id="@+id/ivWhats"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/whats"
        android:tint="@color/white"
        app:layout_constraintTop_toTopOf="@id/viewMsg"
        app:layout_constraintBottom_toBottomOf="@id/viewMsg"
        app:layout_constraintEnd_toEndOf="@id/viewMsg"
        app:layout_constraintStart_toStartOf="@id/viewMsg"
        />
    <androidx.constraintlayout.widget.Group
        android:id="@+id/whatsGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="ivWhats,viewMsg"
        />
</androidx.constraintlayout.widget.ConstraintLayout>