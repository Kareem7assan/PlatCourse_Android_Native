<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6"
    android:fillViewport="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_gradient"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="@dimen/margin_normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/welcome_in_taghareed"
            app:layout_constraintStart_toStartOf="@id/registerBtn"
            app:layout_constraintEnd_toEndOf="@id/registerBtn"
            android:layout_marginBottom="@dimen/margin_small"
            android:textColor="@color/dark"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/ivLogo"
            android:fontFamily="@font/medium"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/tvBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_account_tweet"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle"
            app:layout_constraintStart_toStartOf="@id/registerBtn"
            app:layout_constraintEnd_toEndOf="@id/registerBtn"
            android:layout_marginBottom="27dp"
            android:textColor="@color/greyish_brown"
            android:fontFamily="@font/light"
            android:textSize="15.5sp"
            />




        <TextView
            android:id="@+id/tvFname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            app:layout_constraintTop_toBottomOf="@id/tvBody"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="12sp"
            android:layout_marginTop="22.5dp"

            android:textColor="@color/dark"
            android:layout_marginStart="22dp"
            android:lineSpacingExtra="25sp"
            android:text="@string/user_name"/>
        <ImageView
            android:id="@+id/ivMarkName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@id/tvFname"
            app:layout_constraintTop_toTopOf="@id/tvFname"
            android:layout_marginStart="3dp"
            app:layout_constraintBottom_toBottomOf="@id/tvFname"
            />
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etFname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="41dp"
            android:layout_marginTop="9dp"
            android:gravity="center_vertical"
            android:background="@drawable/border_white"
            android:textAlignment="gravity"
            android:hint="@string/enter_first_name"
            android:paddingStart="13.5dp"
            android:layout_marginStart="19dp"
            android:layout_marginEnd="19dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvFname"
            android:inputType="text"
            android:paddingEnd="@dimen/margin_large"
            android:maxLines="1"

            android:maxLength="24"
            android:textSize="13.5sp"
            android:fontFamily="@font/medium"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/tvErrorFName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/etFname"
            app:layout_constraintStart_toStartOf="@id/etFname"
            android:textColor="@color/red_pink"
            android:text="@string/check_first_empty"
            android:fontFamily="@font/regular"
            android:visibility="gone"
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_small"
            />

        <TextView
            android:id="@+id/tvPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            app:layout_constraintTop_toBottomOf="@id/tvErrorMail"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="12sp"
            android:textColor="@color/dark"
            android:layout_marginStart="22dp"
            android:layout_marginTop="13.5dp"
            android:lineSpacingExtra="25sp"
            android:text="@string/phone"/>
        <ImageView
            android:id="@+id/ivMarkPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@id/tvPhone"
            app:layout_constraintTop_toTopOf="@id/tvPhone"
            android:layout_marginStart="3dp"
            app:layout_constraintBottom_toBottomOf="@id/tvPhone"
            />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="41dp"
            android:gravity="center_vertical|end"
            android:background="@drawable/border_white"
            android:textAlignment="gravity"
            android:layout_marginTop="9dp"

            android:paddingStart="69dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPhone"
            android:layout_marginStart="19dp"
            android:layout_marginEnd="19dp"
            android:inputType="phone"
            android:maxLines="1"
            android:maxLength="9"
            android:textSize="13.5sp"
            android:fontFamily="@font/medium"
            android:textColor="@color/black"

            />
        <TextView
            android:id="@+id/tvErrorPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/etPhone"
            app:layout_constraintStart_toStartOf="@id/etPhone"
            android:textColor="@color/red_pink"
            android:fontFamily="@font/regular"
            android:text="@string/check_field_phone_error"
            android:visibility="gone"
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_small"
            />
        <com.hbb20.CountryCodePicker
            android:id="@+id/country_code_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:ccp_autoFormatNumber="true"
            app:ccp_clickable="false"
            app:ccp_defaultNameCode="SA"
            app:ccp_showArrow="false"
            app:ccp_showFlag="true"
            app:ccp_showNameCode="false"
            app:ccp_contentColor="@color/spruce"
            app:ccp_showPhoneCode="false"
            app:ccp_textGravity="CENTER"
            app:ccp_textSize="10sp"
            app:layout_constraintStart_toStartOf="@+id/etPhone"
            app:layout_constraintTop_toTopOf="@id/etPhone"
            app:layout_constraintBottom_toBottomOf="@id/etPhone"
            />

        <TextView
            android:id="@+id/countryCodeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            android:text="966"
            android:textColor="@color/pinkish_grey"
            android:textSize="15sp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@id/country_code_picker"
            app:layout_constraintTop_toTopOf="@id/country_code_picker"
            app:layout_constraintStart_toEndOf="@+id/country_code_picker" />

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            app:layout_constraintTop_toBottomOf="@id/tvErrorFName"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="12sp"
            android:layout_marginTop="13.5dp"
            android:textColor="@color/dark_indigo"
            android:layout_marginStart="22dp"
            android:lineSpacingExtra="25sp"
            android:text="@string/email"/>
        <ImageView
            android:id="@+id/ivMarkEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@id/tvEmail"
            app:layout_constraintTop_toTopOf="@id/tvEmail"
            android:layout_marginStart="3dp"
            app:layout_constraintBottom_toBottomOf="@id/tvEmail"
            />
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="41dp"
            android:layout_marginTop="9dp"
            android:gravity="center_vertical"
            android:background="@drawable/border_white"
            android:textAlignment="gravity"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvEmail"
            android:inputType="textEmailAddress"
            android:paddingEnd="@dimen/margin_large"
            android:layout_marginStart="19dp"
            android:layout_marginEnd="19dp"
            android:hint="@string/enter_email"
            android:paddingStart="13.5dp"
            android:maxLines="1"
            android:textSize="13.5sp"
            android:fontFamily="@font/medium"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/tvErrorMail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/etEmail"
            app:layout_constraintStart_toStartOf="@id/etEmail"
            android:textColor="@color/red_pink"
            android:text="@string/check_email"
            android:fontFamily="@font/regular"
            android:visibility="gone"
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_small"
            />





        TextView
            android:id="@+id/tvPassTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="14.5sp"
            android:textColor="@color/dark_indigo"
            android:lineSpacingExtra="8.5sp"
            android:text="@string/pass_hint_title"


            app:layout_constraintTop_toBottomOf="@+id/tvErrorPhone"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="@font/medium"

            android:layout_marginTop="22dp"
            />

        <TextView
            android:id="@+id/tvPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            app:layout_constraintTop_toBottomOf="@id/tvErrorPhone"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="12sp"
            android:textColor="@color/dark_indigo"
            android:layout_marginStart="22dp"
            android:layout_marginTop="17.5dp"
            android:lineSpacingExtra="25sp"
            android:text="@string/password"/>
        <ImageView
            android:id="@+id/ivMarkPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@id/tvPass"
            app:layout_constraintTop_toTopOf="@id/tvPass"
            android:layout_marginStart="3dp"
            app:layout_constraintBottom_toBottomOf="@id/tvPass"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/etPassLay"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:minHeight="41dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@null"
            app:passwordToggleEnabled="true"
            app:boxStrokeWidth="0dp"
            app:layout_constraintTop_toBottomOf="@+id/tvPass"
            android:layout_marginTop="9dp"
            android:layout_marginStart="19dp"
            android:layout_marginEnd="19dp"
            android:gravity="start"
            app:hintTextAppearance="@style/TextInputLayoutHintText"
            app:hintAnimationEnabled="false"
            app:boxStrokeWidthFocused="0dp"
            app:expandedHintEnabled="false"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="41dp"
                android:paddingStart="13dp"
                android:background="@drawable/border_white"
                android:textAlignment="viewStart"
                android:textDirection="rtl"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvPass"
                android:inputType="textPassword"
                android:paddingTop="@dimen/margin_small"
                android:paddingBottom="@dimen/margin_small"
                android:paddingEnd="@dimen/margin_large"
                android:maxLines="1"
                android:maxLength="12"
                android:textSize="13.5sp"
                android:fontFamily="@font/medium"
                android:textColor="@color/black"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:id="@+id/tvErrorPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/etPassLay"
            app:layout_constraintStart_toStartOf="@id/etPhone"
            android:textColor="@color/red_pink"
            android:text="@string/check_field_pass"
            android:fontFamily="@font/regular"
            android:visibility="gone"
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_small"
            />
        <TextView
            android:id="@+id/tvConfirmPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            app:layout_constraintTop_toBottomOf="@id/tvErrorPass"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="12sp"
            android:textColor="@color/dark_indigo"
            android:layout_marginStart="22dp"
            android:layout_marginTop="17.5dp"
            android:lineSpacingExtra="25sp"
            android:text="@string/re_pass"/>
        <ImageView
            android:id="@+id/ivMarkConfirmPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@id/tvConfirmPass"
            app:layout_constraintTop_toTopOf="@id/tvConfirmPass"
            android:layout_marginStart="3dp"
            app:layout_constraintBottom_toBottomOf="@id/tvConfirmPass"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/etConfirmPassLay"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:minHeight="41dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@null"
            app:passwordToggleEnabled="true"
            android:layout_marginStart="19dp"
            android:layout_marginEnd="19dp"
            app:boxStrokeWidth="0dp"
            app:layout_constraintTop_toBottomOf="@+id/tvConfirmPass"
            android:layout_marginTop="9dp"
            android:gravity="start"
            app:hintTextAppearance="@style/TextInputLayoutHintText"
            app:hintAnimationEnabled="false"
            app:boxStrokeWidthFocused="0dp"
            app:expandedHintEnabled="false"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etConfirmPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="41dp"
                android:paddingStart="13dp"
                android:background="@drawable/border_white"
                android:textAlignment="viewStart"
                android:textDirection="rtl"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvConfirmPass"
                android:inputType="textPassword"
                android:paddingEnd="@dimen/margin_large"
                android:maxLines="1"
                android:paddingTop="@dimen/margin_small"
                android:paddingBottom="@dimen/margin_small"
                android:maxLength="12"
                android:textSize="13.5sp"
                android:fontFamily="@font/medium"
                android:textColor="@color/black"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:id="@+id/tvErrorConfirmPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/etConfirmPassLay"
            app:layout_constraintStart_toStartOf="@id/etConfirmPassLay"
            android:textColor="@color/red_pink"
            android:text="@string/check_match_pass"
            android:fontFamily="@font/regular"
            android:visibility="gone"
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_small"
            />
        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/cbTerms"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:button="@drawable/custom_checkbox_register"
            android:background="@drawable/custom_checkbox_bg"
            android:checked="false"
            android:layout_marginTop="15.5dp"
            app:layout_constraintTop_toBottomOf="@id/tvErrorConfirmPass"
            app:layout_constraintStart_toStartOf="@id/tvErrorConfirmPass"
            />
        <TextView
            android:id="@+id/tvReadHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/cbTerms"
            app:layout_constraintTop_toTopOf="@+id/cbTerms"
            app:layout_constraintBottom_toBottomOf="@id/cbTerms"
            android:layout_marginStart="@dimen/margin_normal"
            android:text="@string/agree_on"
            android:fontFamily="@font/medium"
            android:textStyle="normal"
            android:textSize="12sp"
            android:textColor="@color/dark"
            />
        <TextView
            android:id="@+id/tvTermsDelegate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/tvReadHint"
            app:layout_constraintTop_toTopOf="@+id/tvReadHint"
            app:layout_constraintBottom_toBottomOf="@id/tvReadHint"
            android:layout_marginStart="1dp"
            android:lineHeight="14dp"
            android:text="@string/terms"
            android:fontFamily="@font/medium"
            android:textStyle="normal"
            android:textSize="12sp"
            android:textColor="@color/water_blue"
            />
        <TextView
            android:id="@+id/tvAnd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/tvTermsDelegate"
            app:layout_constraintTop_toTopOf="@+id/tvReadHint"
            app:layout_constraintBottom_toBottomOf="@id/tvReadHint"
            android:layout_marginStart="@dimen/margin_small"
            android:lineHeight="14dp"
            android:text="@string/and"
            android:fontFamily="@font/medium"
            android:textStyle="normal"
            android:textSize="12sp"
            android:textColor="@color/dark"
            />
        <TextView
            android:id="@+id/tvSalesPolicy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/tvAnd"
            app:layout_constraintTop_toTopOf="@+id/cbTerms"
            app:layout_constraintBottom_toBottomOf="@id/cbTerms"
            android:layout_marginStart="@dimen/margin_small"
            android:text="@string/sales_policy"
            android:fontFamily="@font/medium"
            android:textStyle="normal"
            android:textSize="12sp"
            android:textColor="@color/water_blue"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/registerBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/grad_background_btn"
            android:backgroundTint="@null"
            app:backgroundTint="@null"
            android:layout_marginTop="23dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/margin_large"
            android:text="@string/register"
            android:textStyle="bold"
            android:minHeight="46.5dp"
            android:layout_marginStart="19dp"
            android:layout_marginEnd="19dp"
            android:textSize="12.5sp"
            android:fontFamily="@font/medium"
            app:layout_constraintTop_toBottomOf="@id/cbTerms"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>