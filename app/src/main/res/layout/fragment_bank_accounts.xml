<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_normal"
        />
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bold"
        android:textSize="14.5sp"
        android:textColor="@color/dark"
        android:lineSpacingExtra="-2sp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintEnd_toEndOf="@id/endGuide"
        android:gravity="center_horizontal"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="@id/startGuide"
        android:text="@string/comission_title"/>

    <TextView
        android:id="@+id/tvPledge"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/regular"
        android:textStyle="normal"
        android:textSize="14.5sp"
        android:textColor="@color/dark"
        app:layout_constraintStart_toStartOf="@id/startGuide"
        app:layout_constraintEnd_toEndOf="@id/endGuide"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        android:layout_marginTop="10.5dp"
        android:lineSpacingExtra="7.8sp"
        android:gravity="center_horizontal"
        android:text="@string/pledge"/>

    <TextView
        android:id="@+id/tvPledgeMeasures"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/regular"
        android:textStyle="normal"
        android:textSize="14.5sp"
        android:textColor="@color/dark"
        android:lineSpacingExtra="7.8sp"
        android:gravity="center_horizontal"
        app:layout_constraintStart_toStartOf="@id/startGuide"
        app:layout_constraintEnd_toEndOf="@id/endGuide"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@id/tvPledge"
        android:text="@string/pledge_measures"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvBanks"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        tools:listitem="@layout/bank_account"
        android:layout_marginTop="29dp"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintStart_toStartOf="@id/startGuide"
        app:layout_constraintEnd_toEndOf="@id/endGuide"
        app:layout_constraintTop_toBottomOf="@id/tvPledgeMeasures"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/margin_large"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/startGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintGuide_begin="32dp"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/endGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintGuide_end="32dp"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>