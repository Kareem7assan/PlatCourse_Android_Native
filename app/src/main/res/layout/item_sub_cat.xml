<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_normal"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/nearByLay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="98.5dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="@dimen/margin_normal"
        android:minHeight="31dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:background="@drawable/stroke_water_bg_solid_white"
        >
        <TextView
            android:id="@+id/tvSubCat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/near_me"
            android:fontFamily="@font/regular"
            android:textSize="10.5sp"
            android:textColor="@color/water_blue"

            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>